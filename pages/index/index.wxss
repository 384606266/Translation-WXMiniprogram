/**index.wxss**/
.content {
  width: 90%;
  margin: 0 5%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: lightcyan;
}

.hover {
  background-color: gray;
}

.ad {
  border-radius: 10px;
  font-size: 30rpx;
  border: 1px solid #228B22;
}

.button{
  margin:20rpx;
  box-shadow: -2px 2px 2px rgba(19, 16, 16, 0.4);
}

.button-title{
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-block: 20rpx;
  font-size:24px;
  text-align: left;
}

.button-content{
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size:20px;
  text-align: left;
  font-family: 'Courier New', Courier, monospace;
}